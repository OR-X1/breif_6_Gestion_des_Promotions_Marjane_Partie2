                                <option value="<%= element.id %>"><%= element.name %> </option>
                              <% }) %>
                          </select>
                        </div>

                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                      <button type="submit" class="btn btn-primary">save</button>
                    </div>
                  </form>

